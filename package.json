{
  "name": "react-front-kit",
  "private": true,
  "description": "Front Kit Monorepo",
  "license": "MIT",
  "homepage": "https://github.com/Smile-SA/react-front-kit",
  "repository": {
    "type": "git",
    "url": "git@github.com:Smile-SA/react-front-kit.git"
  },
  "bugs": {
    "url": "https://github.com/Smile-SA/react-front-kit/issues"
  },
  "author": {
    "name": "Tony Cabaye",
    "email": "tonai59+github@gmail.com",
    "url": "https://github.com/tonai"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "serve-and-test-storybook": "turbo run serve-and-test-storybook",
    "format": "prettier --write --ignore-unknown --ignore-path <(cat .gitignore .prettierignore) .",
    "changeset": "changeset",
    "version": "turbo run build lint test && changeset version",
    "publish": "turbo run build lint test && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@turbo/gen": "^1.10.13",
    "eslint": "^8.49.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@8.19.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown --ignore-path <(cat .gitignore .prettierignore)"
  }
}
